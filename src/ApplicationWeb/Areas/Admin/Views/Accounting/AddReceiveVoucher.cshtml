@model ApplicationCore.Entities.Accounting.AccountVoucher


@{
    var pageId = ViewBag.PageName + "-" + ViewBag.MenuId;
    //var divToolbarId = "divtoolbar" + pageId;
    var toolbarId = "toolbar" + pageId;
    var tblMasterId = "tbl" + pageId;
    var tblBodyId = "tblBody" + pageId;
    var tblChildId = "tblChild" + pageId;
    var formId = "form" + pageId;
    var divPrimaryId = "divPrimary" + pageId;
    var divDetailsId = "divDetails" + pageId;
}

<div class="d-flex flex-column-fluid container row col-sm-12" id="@pageId">
    <div class="col-sm-12" id="@divPrimaryId">
        <div id="@toolbarId" class="master-toolbar">
            <div class="row">
                <div class="col-md-12">
                    <button id="btnNew" class="btn btn-default btn-sm btn-list btn-list-left">
                        <i class="fa fa-plus"></i>&nbsp;New
                    </button>
                    <button id="btnAllList" class="btn btn-success btn-sm btn-list btn-list-left">
                        <i class="fa fa-list"></i>&nbsp;Stock In List
                    </button>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">List Receive Voucher</h3>
            </div>

            <div class="card-body table-responsive">
                <table class="table table-bordered table-hover" id="@tblMasterId">
                    <thead>
                        <tr>
                            <th style="width:35px;">SL.</th>
                            <th>Date</th>
                            <th>PV No</th>
                            <th>Branch</th>
                            <th>Voucher By</th>
                            <th>Memo</th>
                            <th>Amount</th>
                            <th style="width:100px;">Options</th>
                        </tr>
                    </thead>
                    <tbody id="@tblBodyId">
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-sm-12" id="@divDetailsId">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title ">Add Receive Voucher</h3>
            </div>
            <div class="card-body">
                <form class="form" id="@formId" novalidate="novalidate">
                    <input type="hidden" asp-for="AccountVoucherId">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="VoucherDate">*Date</label>
                                <input type="date" class="form-control" asp-for="VoucherDate" />
                            </div>
                            <div class="form-group">
                                <label for="AccountType">* Payee</label>
                                <select asp-for="AccountType" class="form-control" single="true">
                                    <option value="1">Accounts</option>
                                    <option value="3">Customer</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="AccountLedgerId">*Pay From ( Dr )</label>
                                <select asp-for="AccountLedgerId" class="form-control">
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="BranchAutoId">Branch</label>
                                <select asp-for="BranchId" class="form-control">
                                </select>
                            </div>
                            <div class="form-group" style="display:none;" id="payeeToTextbox">
                                <label asp-for="PayeeTo">* Payee To</label>
                                <input type="text" class="form-control" asp-for="PayeeTo" />
                            </div>

                            <div class="form-group" style="display:none;" id="supplierIdDropdown">
                                <label asp-for="SupplierId">* Payee To</label>
                                <select class="form-control" asp-for="SupplierId">
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="LedgerBalance">Balance TK.</label>
                                <input type="text" class="form-control" asp-for="LedgerBalance" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-md-offset-1">
                        <br>
                        <div class="table-header">
                            Select Account Head
                        </div>
                        <table class="table table-bordered table-hover" id="show_item">
                            <thead>
                                <tr>
                                    <td style="width: 40%" align="center">
                                        <strong>
                                            <span style="color: red;">*</span>Account Head
                                        </strong>
                                    </td>
                                    <td style="width: 20%" align="center">
                                        <strong>
                                            <span style="color: red;">*</span>Amount
                                        </strong>
                                    </td>
                                    <td style="width: 20%" align="center">
                                        <strong>Memo</strong>
                                    </td>
                                    <td style="width: 20%" align="center">
                                        <strong>Action</strong>
                                    </td>
                                </tr>
                            </thead>
                            <tbody id="accountVoucherTbody">
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td>
                                        <select class="form-control" single="true" id="accountHeadId">
                                        </select>
                                    </td>
                                    <td>
                                        <input type="text" class="form-control text-right" id="amount"
                                               oninput="this.value = this.value.replace(/[^0-9.]/g, ''); this.value = this.value.replace(/(\..*)\./g, '$1');"
                                               placeholder="0.00">
                                    </td>
                                    <td>
                                        <input type="text" class="form-control text-right memo" placeholder="Memo" id="memo">
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-info" id="addAccountVoucherBtn" title="Add Item">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td align="right">
                                        <strong>Sub-Total(BDT)</strong>
                                    </td>
                                    <td align="right" colspan="2">
                                        <strong id="subTotalAmount"></strong>
                                    </td>

                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right"
                                   for="form-field-1">
                                Narration
                            </label>
                            <div class="col-sm-5">
                                <div class="input-group">
                                    <textarea cols="60" rows="2" id="Narration" name="narration" placeholder="Narration"
                                              type="text"></textarea>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="card-footer float-right">
                        <button type="reset" class="btn btn-danger" id="btnCancel">Back</button>
                        <button type="button" class="btn btn-primary" id="btnSave">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script>
        const GetPageInformation = function () {
            return {
                pageName: "@ViewBag.PageName",
                menuId: "@ViewBag.MenuId",
            }
        }
    </script>
    <script src="~/application-scripts/accounting/ReceiveVoucher.js"></script>
}