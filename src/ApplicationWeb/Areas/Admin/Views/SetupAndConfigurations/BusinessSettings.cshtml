                                    <div class="col-sm-12 form-group">
                                        <label> Timezone</label>
                                        <select class="form-control col-md-6" id="timezone_value" single="true">
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group mb-0 text-right">
                                    <button type="button" class="btn btn-success" id="btnSave">Save</button>
                                </div>
                            </form>
                        </div>

                        <div class="tab-pane fade" id="payment-method-bs" role="tabpanel" aria-labelledby="payment-method-bs-tab">
