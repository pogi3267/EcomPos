                                    <div class="col-sm-6 form-group">
                                        <label> Currency Position</label>
                                        <select class="form-control col-md-12" id="currency_position_value" single="true">
                                            <option value="Left"> Left </option>
                                            <option value="Right"> Right </option>
                                        </select>
                                    </div>
                                    <div class="col-sm-6 form-group">
                                        <label> Amount Format</label>
                                        <input type="text" class="form-control col-md-12" name="amount_format_value" id="amount_format_value" placeholder="#,##0.00">
                                    </div>
                                </div>

                                <div class="form-group mb-0 text-right">
                                    <button type="button" class="btn btn-success" id="btnSave">Save</button>
                                </div>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="mail-bs" role="tabpanel" aria-labelledby="mail-bs-tab">
                            <form class="form-horizontal" id="formMailing">
                                <input type="hidden" name="admin_mailing_address" value="admin_mailing_address">
                                <input type="hidden" name="send_mail_to_admin_after_order" value="send_mail_to_admin_after_order">
                                <input type="hidden" name="send_mail_to_customer_after_order" value="send_mail_to_customer_after_order">
                                <input type="hidden" name="send_mail_after_change_order_status" value="send_mail_after_change_order_status">
                                <div class="row">
                                    <div class="col-sm-6 form-group">
                                        <label> Admin Mail</label>
                                        <input type="text" class="form-control col-md-12" name="admin_mailing_address_value" id="admin_mailing_address_value" placeholder="Admin Mail">
                                    </div>
                                    <div class="col-sm-6 form-group">
                                        <div class="form-group">
                                            <label>Send Mail To Admin After Order</label>
                                            <div>
                                                <input type="checkbox" id="send_mail_to_admin_after_order_value" data-bootstrap-switch data-off-color="danger" data-on-color="success">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6 form-group">
                                        <div class="form-group">
                                            <label>Send Mail To Customer After Order</label>
                                            <div>
                                                <input type="checkbox" id="send_mail_to_customer_after_order_value" data-bootstrap-switch data-off-color="danger" data-on-color="success">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 form-group">
                                        <div class="form-group">
                                            <label>Send Mail After Changing Order Status</label>
                                            <div>
                                                <input type="checkbox" id="send_mail_after_change_order_status_value" data-bootstrap-switch data-off-color="danger" data-on-color="success">
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group mb-0 text-right">
                                    <button type="button" class="btn btn-success" id="btnSave">Save</button>
                                </div>
                            </form>
                        </div>

                        <div class="tab-pane fade" id="top-banner-bs" role="tabpanel" aria-labelledby="top-banner-bs-tab">
                            <form class="form-horizontal" id="formCarouselImage">
                                <input type="hidden" name="setting" value="site_carousel_images">
