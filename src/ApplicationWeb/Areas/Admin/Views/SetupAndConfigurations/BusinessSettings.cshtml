                                <input type="hidden" name="setting" value="payment_mode">

                                <div class="row">
                                    <div class="col-sm-12 form-group">
                                        <label> Mode</label>
                                        <select class="form-control col-md-6" id="payment_mode_value" single="true">
                                            <option value="all"> All </option>
                                            <option value="cod"> Only Cash On Delivery </option>
                                            <option value="dp"> Digital Payment </option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group mb-0 text-right">
                                    <button type="button" class="btn btn-success" id="btnSave">Save</button>
                                </div>
                            </form>
                        </div>

                        <div class="tab-pane fade" id="maintenance-bs" role="tabpanel" aria-labelledby="maintenance-bs-tab">
                            <form class="form-horizontal" id="formMaintenanceMode">
                                <input type="hidden" name="maintenance_mode" value="maintenance_mode">
                                <input type="hidden" name="maintenance_time" value="maintenance_time">

                                <div class="row">
                                    <div class="col-sm-3 form-group">
                                        <label>Maintenance Mode</label>
                                        <div>
                                            <input type="checkbox" id="maintenance_mode_value" data-bootstrap-switch data-off-color="danger" data-on-color="success">
                                        </div>
                                    </div>
                                    <div class="col-sm-3 form-group">
                                        <div class="form-group">
                                            <label>Maintenance Time</label>
                                            <div class="input-group date devensedatetime" id="maintenanceDate" data-target-input="nearest">
                                                <input type="text" class="form-control datetimepicker-input devensedatetime" id="maintenance_time_value" data-target="#maintenanceDate" />
                                                <div class="input-group-append" data-target="#maintenanceDate" data-toggle="datetimepicker">
                                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group mb-0 text-right">
                                    <button type="button" class="btn btn-success" id="btnSave">Save</button>
                                </div>
                            </form>
                        </div>

