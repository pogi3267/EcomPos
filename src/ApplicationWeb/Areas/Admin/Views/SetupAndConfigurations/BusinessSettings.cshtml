                                    <div class="col-md-6">
                                        <label for="name">Home Page Top Banner Images <small>(1900x675)</small></label>
                                        <div class="custom-file">
                                            <label class="custom-file-label">Banner Images</label>
                                            <input type="file" id="carouselImageInp" class="custom-file-input" multiple accept="image/*" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12 file-preview box sm" id="carouselImagePreview">
                                    </div>
                                </div>
                                <div class="form-group mb-0 text-right">
                                    <button type="button" class="btn btn-success" id="btnSave">Save</button>
                                </div>
                            </form>
                        </div>

                        <div class="tab-pane fade" id="payment-icon-bs" role="tabpanel" aria-labelledby="payment-icon-bs-tab">
