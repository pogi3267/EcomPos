                                    <div class="col-md-6" id="paymentImage">
                                        <label for="signinSrEmail"> Payment Icons  <small>(50x30)</small></label>
                                        
                                        <div class="custom-file">
                                            <label class="custom-file-label">Payment Icons</label>
                                            <input type="file" id="paymentImageInp" class="custom-file-input" multiple accept="image/*" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12 file-preview box sm" id="paymentImagePreview">
                                        </div>
                                </div>
                                <div class="form-group mb-0 text-right">
                                    <button type="button" class="btn btn-success" id="btnSave">Save</button>
                                </div>
                            </form>
                        </div>

                        <div class="tab-pane fade" id="address-setup-bs" role="tabpanel" aria-labelledby="address-setup-bs-tab">
                            <form class="form-horizontal" id="formAddress">

                                <div class="row col-sm-12">
                                    <div class="form-group col-sm-4">
                                        <label class="col-form-label">Field</label>
                                        <select class="form-control" id="fieldAddress" single="true">
                                            <option value="ReceiverName"> Name </option>
                                            <option value="Phone"> Phone </option>
                                            <option value="Email"> Email </option>
                                            <option value="Address1"> Address </option>
                                        </select>
                                    </div>

                                    <div class="form-group col-sm-4">
                                        <label class="col-form-label">Field Label</label>
                                        <input type="text" class="form-control" id="fieldLabel" placeholder="Field Label">
                                    </div>

                                    <div class="form-group col-sm-2">
                                        <label class="col-form-label">Field Type</label>
                                        <select class="form-control" id="fieldType" single="true">
                                            <option value="Text"> Text </option>
                                            <option value="LargeText"> Large Text </option>
                                        </select>
                                    </div>

                                    <div class="form-group col-sm-2">
                                        <div class="form-group">
                                            <label class="col-form-label">Is Required?</label>
                                            <div>
                                                <input type="checkbox" id="IsFieldRequired" data-bootstrap-switch data-off-color="danger" data-on-color="success">
                                            </div>
                                        </div>
                                    </div>

                                </div>

