@{
    ViewData["Titel"] = "Payments";
}

@{
    var pageId = ViewBag.PageName + "-" + ViewBag.MenuId;
    var divToolbarId = "divtoolbar" + pageId;
    var toolbarId = "toolbar" + pageId;
    var tblMasterId = "tbl" + pageId;
    var tblBodyId = "tblBody" + pageId;
    var tblChildId = "tblChild" + pageId;
    var formId = "form" + pageId;
    var divPrimaryId = "divPrimary" + pageId;
    var divDetailsId = "divDetails" + pageId;
}

<div class="d-flex flex-column-fluid container row col-sm-12 mt-3" id="@pageId">
    <div class="row col-md-12">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0 h6 ">Google Login</h5>
                </div>
                <div class="card-body">
                    <form class="form-horizontal" id="formGoogle">
                        <input type="hidden" name="social_login" value="google_login">
                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="col-from-label">Client Id</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="clientId" placeholder="Google Client Id">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="col-from-label">Client Secret</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="clientSecret" placeholder="Google Client Secret">
                            </div>
                        </div>
                        <div class="form-group mb-0 text-right">
                            <button type="button" class="btn btn-success" id="btnSave">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0 h6 ">Facebook Login</h5>
                </div>
                <div class="card-body">
                    <form class="form-horizontal" id="formFacebook">
                        <input type="hidden" name="social_login" value="facebook_login">
                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="col-from-label">Client Id</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="clientId" placeholder="Facebook Client Id">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-4">
                                <label class="col-from-label">Client Secret</label>
                            </div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" name="clientSecret" placeholder="Facebook Client Secret">
                            </div>
                        </div>
                        <div class="form-group mb-0 text-right">
                            <button type="button" class="btn btn-success" id="btnSave">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        const GetPageInformation = function () {
            return {
                pageName: "@ViewBag.PageName",
                menuId: "@ViewBag.MenuId",
            }
        }
    </script>
    <script src="~/application-scripts/setup-and-configurations/social-login.js"></script>
    }
