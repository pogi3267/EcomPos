@model ApplicationCore.Entities.Inventory.OperationalUser
@{
    var pageId = ViewBag.PageName + "-" + ViewBag.MenuId;
    var toolbarId = "toolbar" + pageId;
    var tblMasterId = "tbl" + pageId;
    var tblBodyId = "tblBody" + pageId;
    var tblChildId = "tblChild" + pageId;
    var formId = "form" + pageId;
    var divPrimaryId = "divPrimary" + pageId;
    var divDetailsId = "divDetails" + pageId;
}

<div class="d-flex flex-column-fluid container row col-sm-12" id="@pageId">
    <div class="col-sm-12" id="@divPrimaryId">
        <div id="@toolbarId" class="master-toolbar">
            <div class="row">
                <div class="col-md-12">
                    <button id="btnNew" class="btn btn-default btn-sm btn-list btn-list-left">
                        <i class="fa fa-plus"></i>&nbsp; New @Model.CreateNew Added
                    </button>
                    <button id="btnAllList" class="btn btn-success btn-sm btn-list btn-list-left">
                        <i class="fa fa-list"></i>&nbsp;@Model.ListName
                    </button>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="@tblMasterId">
                <thead>
                    <tr>
                        <th style="width:8%;">SL.</th>
                        <th style="width:20%;">Organization Name</th>
                        <th style="width:15%;">Department</th>
                        <th style="width:10%;">Code</th>
                        <th style="width:12%;">Opening Balance</th>
                        <th style="width:15%;">Action</th>
                    </tr>
                </thead>
                <tbody id="@tblBodyId">
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-sm-12" id="@divDetailsId">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title ">@Model.CreateNew Details</h3>
            </div>

            <div class="card-body">
                <form class="form" id="@formId" novalidate="novalidate">
                    <div class="row">
                        <input type="hidden" asp-for="Role" />
                        <input type="hidden" asp-for="OperationalUserId">
                        <input type="hidden" asp-for="Code">
                        <input type="hidden" asp-for="ImageUrl">
                        <div class="form-group col-sm-6">
                            <label asp-for="Name">Name</label>
                            <input type="text" class="form-control" asp-for="Name">
                            <span class="Name text-danger" style="display:none;">Name is required</span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="OrganizationName">Organization Name</label>
                            <input type="text" class="form-control" asp-for="OrganizationName">
                            <span class="OrganizationName text-danger" style="display:none;">Organization Name is required</span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Department">Department</label>
                            <input type="text" asp-for="Department" class="form-control" />
                            <span class="Department text-danger" style="display:none;">Department is required</span>
                        </div>
                        @*<div class="form-group col-sm-6">
                        <label asp-for="Photo">ছবি</label>
                        <input type="file" asp-for="Photo" class="form-control" />
                        <span class="Photo text-danger" style="display:none;">Photo is required</span>
                        </div>*@
                        <div class="form-group col-sm-6">
                            <label asp-for="ContactPerson">Contact Person</label>
                            <input type="text" asp-for="ContactPerson" class="form-control" />
                            <span class="ContactPerson text-danger" style="display:none;">ContactPerson is required</span>
                        </div>

                        <div class="form-group col-sm-6">
                            <label asp-for="MobileNumber">Mobile Number</label>
                            <input type="text" asp-for="MobileNumber" class="form-control" />
                            <span class="MobileNumber text-danger" style="display:none;">Mobile Number is required</span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Email">Email</label>
                            <input type="email" asp-for="Email" class="form-control" />
                            <span class="Email text-danger" style="display:none;">Email is required</span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="OpeningBalance">Opening Balance</label>
                            <input type="number" asp-for="OpeningBalance" class="form-control" />
                            <span class="OpeningBalance text-danger" style="display:none;">Opening Balance is required</span>
                        </div>
                        
                        <div class="form-group col-sm-6">
                            <label asp-for="Address">Address</label>
                            <textarea type="text" asp-for="Address" class="form-control"></textarea>
                            <span class="Address text-danger" style="display:none;">Address is required</span>
                        </div>
                    </div>
                    <div class="card-footer float-right">
                        <button type="reset" class="btn btn-danger" id="btnCancel">Cancel</button>
                        <button type="button" class="btn btn-primary" id="btnSave">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script>
        const GetPageInformation = function () {
            return {
                pageName: "@ViewBag.PageName",
                menuId: "@ViewBag.MenuId",
            }
        }
    </script>
    <script src="~/application-scripts/inventory/operational-user.js"></script>
}