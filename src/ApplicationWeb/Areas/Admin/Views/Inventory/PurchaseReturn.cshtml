@model ApplicationCore.Entities.Inventory.PurchaseReturn
@{
    var pageId = ViewBag.PageName + "-" + ViewBag.MenuId;
    var divToolbarId = "divtoolbar" + pageId;
    var toolbarId = "toolbar" + pageId;
    var tblMasterId = "tbl" + pageId;
    var tblBodyId = "tblBody" + pageId;
    var tblChildId = "tblChild" + pageId;
    var formId = "form" + pageId;
    var divPrimaryId = "divPrimary" + pageId;
    var divDetailsId = "divDetails" + pageId;
}
<style>
    .readonly-select {
        pointer-events: none; /* Prevents interaction */
        background-color: #e9ecef; /* Gives a disabled appearance */
    }
    .preview-img {
        width: 200px; 
        height: 120px; 
        object-fit: cover; 
        border: 1px solid #ddd; 
        border-radius: 5px; 
    }
</style>
<div class="d-flex flex-column-fluid container row col-sm-12 mt-3" id="@pageId">
    <div class="row col-sm-12" id="@divPrimaryId">
        <div class="col-sm-12">
            <div id="@toolbarId" class="master-toolbar">
                <div class="row">
                    <div class="col-sm-12">
                        <button id="btnAllList" class="btn btn-success btn-sm btn-list btn-list-left">
                            <i class="fa fa-list"></i>&nbsp;Purchase repurn List
                        </button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 table-responsive">
                        <table class="table table-bordered table-hover" id="@tblMasterId">
                            <thead>
                                <tr>
                                    <th>SL</th>
                                    <th>Product Image</th>
                                    <th>Purchase Date</th>
                                    <th>Product Name</th>
                                    <th>Total Quentity</th>
                                    <th>Total Amount</th>
                                    <th >Action</th>
                                </tr>
                            </thead>
                            <tbody id="@tblBodyId">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12" id="@divDetailsId" style="display:none;">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title ">Purchase Details</h3>
            </div>
            <div class="card-body">
                <form class="form" id="@formId" novalidate="novalidate">
                    <input type="hidden" asp-for="PurchaseRetuenId" id="PurchaseRetuenId">
                    <input type="hidden" asp-for="PurchaseId" id="purchaseId">
                    <div class="row">
                        <div class="form-group col-sm-3">
                            <label>Product Name</label>
                            <select asp-for="ProductId" id="productId" class="form-control  purchase-form-validation" disabled></select>
                            <input type="hidden" asp-for="ProductId">
                            <span class="text-danger productId" style="display:none;">Product Name</span>
                        </div>
                        <div class="form-group col-sm-1">
                            <label>Unit</label>
                            <select asp-for="UnitId" id="unitId" class="form-control readonly-select purchase-form-validation" disabled></select>
                            <input type="hidden" asp-for="UnitId">
                            <span class="text-danger UnitId" style="display:none;">Unit</span>
                        </div>

                        <div class="form-group col-sm-2">
                            <label>Purchase Price</label>
                            <input type="number" asp-for="PurchasePrice" placeholder="purchase price" class="form-control readonly-select purchase-form-validation" />
                            <span class="text-danger purchasePrice" style="display:none;">Purchase Price</span>
                        </div>
                        <div class="form-group col-sm-2">
                            <label>Regular Price</label>
                            <input type="number" asp-for="RegularPrice" placeholder="regular price" class="form-control readonly-select purchase-form-validation" />
                            <span class="text-danger regularPrice" style="display:none;">Regular Price</span>
                        </div>
                        <div class="form-group col-sm-2">
                            <label>Sale Price</label>
                            <input type="number" asp-for="SalePrice" placeholder="sale price" class="form-control readonly-select purchase-form-validation" />
                            <span class="text-danger salePrice" style="display:none;">Sale Price</span>
                        </div>
                        <div class="form-group col-sm-2">
                            <label>Expanse</label>
                            <input type="number" asp-for="Expanse" placeholder="sale price" class="form-control readonly-select purchase-form-validation" />
                            <span class="text-danger expanse" style="display:none;">Expanse</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-sm-2">
                            <label>Purchase Date</label>
                            <input type="date" asp-for="PurchaseDate" class="form-control readonly-select purchase-form-validation" placeholder="purchasdate">
                            <span class="text-danger purchaseDate" style="display:none;">Purchase Date</span>
                        </div>

                        <div class="form-group col-sm-2">
                            <label>Supplier</label>
                            <select asp-for="SupplierId" id="supplierId" name="SupplierId" class="form-control readonly-select purchase-form-validation" disabled></select>
                            <input type="hidden" asp-for="SupplierId">
                            <span class="text-danger purchaseType" style="display:none;">Supplier</span>
                        </div>
                        <div class="form-group col-sm-2">
                            <label>Supplier Address</label>
                            <input type="text" id="supplierAddress"  asp-for="Address" readonly placeholder="supplier address" class="form-control" />
                            <span class="text-danger supplierAddress" style="display:none;">Supplier Address</span>
                        </div>
                        <div class="form-group col-sm-2" hidden>
                            <label for="name">Product Img</label>
                            <div class="custom-file">
                                <input type="file" asp-for="Photo" class="custom-file-input" />
                            </div>
                        </div>
                        <div class="form-group col-sm-3">
                            <div class="file-preview box sm" id="imagePreview">
                                <img id="bandImage" src="~/dashboardImage/productdefoultimage.png" alt="No Image" class="preview-img">
                                
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0 h6"> Product Variation </h5>
                        </div>
                        <div class="card-body">
                            <div class="product-variation table-responsive variant-table" id="productVariation">
                                <table class="table" id="productVariationInfo">
                                    <caption>Product Variation List Table</caption>
                                    <thead>
                                        <tr>
                                            <th>SL</th>
                                            <th>Variant</th>
                                            <th>Variant Price</th>
                                            <th>Purchase Quantity</th>
                                            <th>Already returned quantity</th>
                                            <th style="text-align:center">Return Quantity</th>
                                        </tr>
                                    </thead>
                                    <tbody id="productVariationTBody">
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-sm-12">
                            <button type="button" class="btn btn-danger" id="btnBack" title="Back">Back</button>
                            <button type="button" class="btn btn-primary" id="btnSave" title="Save Purchase">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section scripts{

    <script>
        const GetPageInformation = function () {
            return {
                pageName: "@ViewBag.PageName",
                menuId: "@ViewBag.MenuId",
            }
        }
    </script>
    <script src="~/application-scripts/inventory/purchaseReturn.js"></script>
}