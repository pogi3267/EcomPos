@model ApplicationCore.Entities.ApplicationUser.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}

<div class="d-flex flex-column-fluid mt-3 container row col-sm-12">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title ">Update User</h3>
            </div>

            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="row">
                        <div class="form-group col-sm-3">
                            <label asp-for="Id" class="col-sm-4 col-form-label">Id</label>
                            <input asp-for="Id" disabled class="form-control">
                        </div>

                        <div class="form-group col-sm-3">
                            <label asp-for="UserName" class="col-sm-4 col-form-label">User Name</label>
                            <input asp-for="UserName" disabled class="form-control">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group col-sm-3">
                            <label asp-for="FirstName" class="col-sm-4 col-form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control">
                        </div>

                        <div class="form-group col-sm-3">
                            <label asp-for="LastName" class="col-sm-4 col-form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control">
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-sm-3">
                            <label asp-for="Email" class="col-sm-4 col-form-label">Email</label>
                            <input asp-for="Email" disabled class="form-control">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group col-sm-3">
                            <label asp-for="PhoneNumber" class="col-sm-4 col-form-label">Phone</label>
                            <input asp-for="PhoneNumber" class="form-control">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-8 card mt-3">
                        <div class="card-header">
                            Menu Permission
                        </div>
                        <div class="card-footer">
                            <a asp-area="Admin" asp-controller="Administration" asp-action="ManageMenuPermission" asp-route-userId="@Model.Id" class="btn btn-primary">
                                Manage Menu
                            </a>
                        </div>
                    </div>
                    
                    <div class="col-sm-8 card mt-3">
                        <div class="card-header">
                            User Claims
                        </div>
                        <div class="card-footer">
                            <a asp-area="Admin" asp-controller="Administration" asp-action="ManageUserClaims" asp-route-userId="@Model.Id" class="btn btn-primary">
                                Manage & See Claims
                            </a>
                        </div>
                    </div>

                    <div class="col-sm-8 card">
                        <div class="card-header">
                            User Roles
                        </div>
                        <div class="card-body">
                            @if (Model.Roles.Any())
                            {
                                foreach (var role in Model.Roles)
                                {
                                    <ul>
                                        <li>
                                            <h5 class="card-title">@role</h5>
                                        </li>
                                    </ul>

                                }
                            }
                            else
                            {
                                <h5 class="card-title">None at the moment</h5>
                            }
                        </div>
                        <div class="card-footer">
                            <a asp-area="Admin" asp-controller="Administration" asp-action="ManageUserRoles" asp-route-userId="@Model.Id"
                               class="btn btn-primary">
                                Manage Roles
                            </a>
                        </div>
                    </div>

                    <div class="float-right">
                        <button type="submit" class="btn btn-sm btn-success">Update</button>
                        <a asp-action="ListUsers" class="btn btn-sm btn-danger">Back</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
