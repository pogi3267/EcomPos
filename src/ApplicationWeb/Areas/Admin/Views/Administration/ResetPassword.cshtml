<div class="wrapper col-sm-12">
    <div class="login-box">
        <div class="card card-outline card-primary">
            <h1 class="bg-info text-white col-md-12">Reset Password</h1>
        <div class="row">
            <p class="col-md-12">
                <div class="text-danger" asp-validation-summary="All"></div>
            </p>
        </div>   
            <div class="card-body">
        <form asp-action="ResetPassword" method="post">
            <div class="form-group">
                <label asp-for="Password" class="rpFieldLabel">Password</label>
                <input type="password" asp-for="Password" class="form-control rpFieldInput" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="rpFieldLabel">Confirm Password</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control rpFieldInput" />
            </div>
            <input type="hidden" asp-for="Email" class="form-control" />
            <input type="hidden" asp-for="Token" class="form-control" />
           
            <div class="row">
                        <div class="col-12">
                             <button class="btn btn-primary btn-block" type="submit">Submit</button>
                        </div>
                        <!-- /.col -->
                    </div>
        </form>
