@model ApplicationCore.Entities.ApplicationUser.ApplicationUser

@{
    ViewData["Titel"] = "Create";
}
<div class="container-sm p-sm-3 w-50">
    <div class="card w-100">
        <div class="card-header">
            <h3 class="card-title">New Role</h3>
        </div>

        <div class="card-body">
            <form action="/Admin/User/Register" id="user-validate" method="post" enctype="multipart/form-data">

                    <div asp-validation-summary="ModelOnly" class="text-danger">
                    </div>
                    <h3>@ViewBag.message</h3>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="UserName"></label>
                        </div>
                        <div class="col-5">
                        <input type="text" asp-for="UserName" class="form-control" />
                        </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="PasswordHash"></label>
                        </div>
                        <div class="col-5">
                        <input asp-for="PasswordHash" class="form-control" type="password" />
                        </div>
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="FirstName"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="FirstName" class="form-control" />
                        </div>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="LastName"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="LastName" class="form-control" />
                        </div>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="card-footer float-right">
                        <input type="submit" class="btn btn-primary" value="Save" />
                        <a asp-action="ListUsers" asp-controller="Administration" class="btn btn-info btnEdit">Back to  List</a>
                    </div>    
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");
    }
}
