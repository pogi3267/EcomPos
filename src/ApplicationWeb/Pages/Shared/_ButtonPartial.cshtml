@model ApplicationCore.Entities.Commonhelper.ButtonModel

<style>
    .tdBpWidth{
        width: 150px
    }

    .tdBpDetailsButton {
        background-color: #50aeef;
        color: white;
    }
</style>


<td class="tdBpWidth">
    @if (Model.StrButtonId != null)
    {
        <div class="btn-group">
            <a asp-action="Edit" asp-controller="@Model.Aspcontroller" class="btn btn-info btn-sm btnEdit" asp-route-id="@Model.StrButtonId">Edit</a>
            <a asp-action="Details" asp-controller="@Model.Aspcontroller" class="btn btn-sm tdBpDetailsButton" asp-route-id="@Model.StrButtonId">Details</a>
            <a asp-action="Delete" asp-controller="@Model.Aspcontroller" class="btn btn-danger btn-sm btnDelete" asp-route-id="@Model.StrButtonId">Delete</a>
        </div>
    }
    else
    {
        <div class="btn-group">
            <a asp-action="Edit" asp-controller="@Model.Aspcontroller" class="btn btn-primary" asp-route-id="@Model.IntButtonId"><i class="fa-solid fa-pen-to-square"></i></a>
            <a asp-action="Details" asp-controller="@Model.Aspcontroller" class="btn btn-success" asp-route-id="@Model.IntButtonId"><i class="fa-solid fa-list"></i></a>
            <a asp-action="Delete" asp-controller="@Model.Aspcontroller" class="btn btn-danger" asp-route-id="@Model.IntButtonId"><i class="fa-solid fa-trash-can"></i></a>
        </div>
    }

</td>