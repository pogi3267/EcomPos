
<style>
    .progress {
        margin: 10px;
    }

    #allDirectoryImage {
        overflow-y: scroll;
        height: 400px;
    }

</style>

<div class="modal fade" id="uploaderModal">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content h-100">
            <div class="modal-header pb-0 bg-light">
                <div class="uppy-modal-nav">
                    <ul class="nav nav-tabs border-0">
                        <li class="nav-item">
                            <a class="nav-link active font-weight-medium text-dark" data-toggle="tab" href="#ecom-select-file">Select File</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link font-weight-medium text-dark" data-toggle="tab" href="#ecom-upload-new">Upload New</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="modal-body">
                <div class="tab-content h-100">
                    <div class="tab-pane active h-100" id="ecom-select-file">
                        <div class="ecom-uploader-filter pt-1 pb-3 border-bottom mb-4">

                            <div class="justify-content-between bg-light row col-md-12">
                                <div class="row col-md-4">
                                    <div class="flex-grow-1 overflow-hidden d-flex">
                                        <div class="ecom-uploader-selected" id="numberOfFileSelected">0 File selected</div>
                                    </div>
                                </div>
                                <div class="row col-md-8 d-flex justify-content-end">
                                    <button type="button" class="btn btn-sm btn-success" id="addFilesToBrowse">Add Files</button>&nbsp;
                                    <button type="button" class="btn btn-sm btn-danger" id="deleteFiles">Delete</button>&nbsp;
                                    <button type="button" class="btn btn-sm btn-danger" id="imageSourceClear">Clear</button>&nbsp;
                                    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                        <div class="ecom-uploader-all clearfix c-scrollbar-light">
                            <div class="d-flex h-100 justify-content-center w-100">
                                <div id="allDirectoryImage">
                                    <h3>No files found</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane h-100" id="ecom-upload-new">
                        <div id="ecom-upload-files" class="h-100">
                            <div class="ecom-titlebar text-left mt-2 mb-3">
                                <div class="row align-items-center">
                                    <div class="col-md-6">
                                        <h1 class="h3">Upload New File</h1>
                                    </div>

                                </div>
                            </div>
                            <div>
                                <span class="btn btn-success col fileinput-button" id="fileInputButton">
                                    <i class="fas fa-plus"></i>
                                    <span>Add Photo</span>
                                </span>
                                <input type="file" id="photoUpload" accept="image/*" multiple class="dis-none">
                                <div class="row" id="uploadFilePreviewer">
                                </div>

                                <div class="modal-footer justify-content-between bg-light float-right">
                                    <button type="button" class="btn btn-success btn-sm" id="fileUpload">Upload</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

