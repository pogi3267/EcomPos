@model string

<style>
    .sbPartialTdHeight{
        width: 150px
    }
</style>

<td class="sbPartialTdHeight">
    <div class="btn-group">
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model"><i class="fa-solid fa-pen-to-square"></i></a>
        <a asp-action="Details"  class="btn btn-success" asp-route-id="@Model"><i class="fa-solid fa-list"></i></a>
        <a asp-action="Delete"  class="btn btn-danger" asp-route-id="@Model"><i class="fa-solid fa-trash-can"></i></a>
    </div>
</td>